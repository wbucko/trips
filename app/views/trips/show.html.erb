
<div class="header">
  <h1>There and back again</h1>
  <ul>
    <li><%= link_to 'New Trip', new_trip_path %></li>
    <li>Log In</li>
  </ul>
</div>

<div class="img_show">
<%= image_tag ("#{@trip.image_url}") %>
</div>
<p>
  <strong>Destination:</strong>
  <%= @trip.destination %>
</p>
<!--
<p>
  <strong>Image URL:</strong>
  <%= @trip.image_url %>
</p>
-->
<p>
  <strong>Date:</strong>
  <%= @trip.date %>
</p>

<p>
  <strong>Description:</strong>
  <%= @trip.description %>
</p>

<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %> |
<%= link_to 'Destroy', destroy_path(@trip), method: :delete, data: { confirm: 'Are you sure?' } %>

<p id="notice"><%= notice %></p>